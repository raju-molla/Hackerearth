

#include <bits/stdc++.h>

using namespace std;

string solve(string s){
    s= s.substr(1,s.length());
    return s;
}


int main()
{
   int n;
   cin>>n;
   string s,t;
   cin>>s>>t;
   for(int i=0; i<n; i++){
        if(s.substr(0,s.length())!=t.substr(0,s.length())){
            //cout<<s<<endl;
            s= solve(s);

        }
        else{
                //cout<<s<<endl;
            break;
        }
   }
   cout<<(n-s.size())<<endl;
}
